  gem 'factory_girl_rails'
  gem 'faker'
  gem 'rspec-rails'
  gem 'awesome_print'
  gem 'apipie-rails'
end

group :test do
  gem 'capybara'
  gem 'database_cleaner'
  gem 'launchy'
  gem 'selenium-webdriver'
end

